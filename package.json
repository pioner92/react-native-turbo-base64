{
  "name": "react-native-turbo-base64",
  "version": "0.1.3",
  "description": "âš¡ The fastest base64 encoding/decoding library for React Native. Up to 5x faster with highly optimized C++ and JSI bindings.",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "./src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-turbo-base64-example",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "typecheck": "tsc",
    "release": "release-it --only-version"
  },
  "keywords": [
    "react-native",
    "base64",
    "encoding",
    "decoding",
    "encode",
    "decode",
    "fast",
    "performance",
    "jsi",
    "turbo",
    "native",
    "cpp",
    "ios",
    "android",
    "url-safe",
    "buffer",
    "uint8array",
    "arraybuffer",
    "binary",
    "crypto"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pioner92/react-native-turbo-base64.git"
  },
  "author": "Alex Shumihin <shumolek@gmail.com> (https://github.com/pioner92)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pioner92/react-native-turbo-base64/issues"
  },
  "homepage": "https://github.com/pioner92/react-native-turbo-base64#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@react-native/babel-preset": "0.83.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/react": "^19.2.0",
    "del-cli": "^6.0.0",
    "react": "19.2.0",
    "react-native": "0.83.0",
    "react-native-builder-bob": "^0.35.2",
    "release-it": "^19.0.4",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@4.11.0",
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "create-react-native-library": {
    "type": "legacy-module",
    "languages": "cpp",
    "version": "0.45.5"
  }
}
